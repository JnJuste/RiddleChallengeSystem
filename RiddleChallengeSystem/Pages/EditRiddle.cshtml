@page
@model RiddleChallengeSystem.Pages.EditRiddleModel
@{
}

<br />
<h2>Edit Riddle</h2>
<form method="POST">
    <input type="hidden" name="UserID" value="@Model.riddle.RiddleID" />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">QUESTION:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Question" value="@Model.riddle.Question"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ANSWER:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Answer" value="@Model.riddle.Answer" />
        </div>
    </div>

   
    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

    <div class="form-group row">
        <div class="col-sm-15 offset-sm-2 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-danger" href="/ViewRiddles" style="margin-left: 8px;">Go Back</a>
        </div>
    </div>
</form>